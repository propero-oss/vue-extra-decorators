{
  "$schema": "https://developer.microsoft.com/json-schemas/api-extractor/v7/api-extractor.schema.json",
  "projectFolder": ".",
  "mainEntryPointFilePath": "<projectFolder>/lib/index.d.ts",
  "bundledPackages": [],
  "compiler":      { "tsconfigFilePath": "<projectFolder>/tsconfig.json" },
  "dtsRollup":     { "enabled": true, "untrimmedFilePath": "<projectFolder>/dist/main.d.ts" },
  "apiReport":     { "enabled": true, "reportFileName":    "main.api.md", "reportFolder": "<projectFolder>/dist" },
  "docModel":      { "enabled": false },
  "tsdocMetadata": { "enabled": false },
  "messages": {
    "compilerMessageReporting":  { "default": { "logLevel": "error" } },
    "extractorMessageReporting": { "default": { "logLevel": "none" } },
    "tsdocMessageReporting":     { "default": { "logLevel": "warning" } }
  }
}
